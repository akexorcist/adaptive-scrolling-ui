<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdaptiveScrollingUI">
        <activity
            android:name="com.akexorcist.adaptivescrollingui.ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.akexorcist.adaptivescrollingui.ui.compose.ComposeSimpleActivity"
            android:exported="false" />
        <activity
            android:name="com.akexorcist.adaptivescrollingui.ui.compose.ComposeVerticalWeightActivity"
            android:exported="false" />
        <activity
            android:name="com.akexorcist.adaptivescrollingui.ui.compose.ComposeStickyFooterActivity"
            android:exported="false" />
        <activity
            android:name="com.akexorcist.adaptivescrollingui.ui.view.ViewSimpleActivity"
            android:exported="false" />
        <activity
            android:name="com.akexorcist.adaptivescrollingui.ui.view.ViewVerticalWeightActivity"
            android:exported="false" />
        <activity
            android:name="com.akexorcist.adaptivescrollingui.ui.view.ViewStickyFooterActivity"
            android:exported="false" />
    </application>
</manifest>
