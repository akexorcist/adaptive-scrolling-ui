<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AdaptiveVerticalScrollLayout">
        <attr name="avsl_adaptiveBehaviorEnabled" format="boolean" />
        <attr name="avsl_nonScrollableGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
        <attr name="avsl_scrollableGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
        <attr name="avsl_showScrollbar" format="boolean" />
    </declare-styleable>
</resources>
